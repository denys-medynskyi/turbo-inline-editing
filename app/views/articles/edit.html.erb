<%= form_with model: @article, class: "grid gap-2 max-w-prose m-auto" do |form| %>
  <%= link_to "Back", article_path(@article) %>

  <%= render "inline_field", form: form, attribute: :name do %>
    <strong>
      <%= form.label :name %>
    </strong>
    <%= form.text_field :name %>
  <% end %>

  <%= form.button %>
<% end %>
